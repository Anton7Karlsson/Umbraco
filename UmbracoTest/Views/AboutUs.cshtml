@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Clean.Core.Models.ViewModels;
@{
    Layout = "master.cshtml";
}

@await Html.PartialAsync("~/Views/Partials/pageHeader.cshtml", new PageHeaderViewModel(Model.Name, Model.Title, Model.Subtitle, Model.MainImage))

<article>
    @Html.GetGridHtml(Model, "mainContent", "Clean")
</article>
<h2 style="text-align: center;">Our founders</h2>
<div class="Container">
    
    <div>
        <div class="card">
            <img src="https://image.shutterstock.com/image-vector/businessman-avatar-profile-picture-260nw-221565262.jpg" alt="John" style="width:100%">
